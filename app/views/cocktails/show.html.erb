<div class="container">

  <h1><%= @cocktail.name %></h1>

  <ul class="list-group list-group-flush">

    <% @cocktail.doses.each do |dose| %>

    <li class="list-group-item"> <%= dose.ingredient.name %> <%= dose.description %> </li>

    <% end %>

    <li class="list-group-item"> <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %> </li>
  </ul>

  <%= link_to "EDIT Cocktail", edit_cocktail_path(@cocktail) %>
  <%= link_to "SEE ALL cocktails", cocktails_path %>
</div>
